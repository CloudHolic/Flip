<controls:CustomWindow x:Class="Flip.Views.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:prism="http://prismlibrary.com/"
                       xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
                       xmlns:controls="clr-namespace:Flip.Controls"
                       xmlns:common="clr-namespace:Flip.Core;assembly=Flip.Core"
                       Style="{StaticResource CustomWindowStyle}"
                       TextElement.Foreground="{DynamicResource MaterialDesignBody}"
                       Background="{DynamicResource MaterialDesignPaper}"
                       FontFamily="{material:MaterialDesignFont}"
                       prism:ViewModelLocator.AutoWireViewModel="True"
                       Title="{Binding Title}" Height="500" Width="900"
                       WindowStartupLocation="CenterScreen">
    <ContentControl prism:RegionManager.RegionName="{x:Static common:Names.MainRegion}"/>
</controls:CustomWindow>
